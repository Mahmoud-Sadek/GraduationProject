<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="com.sadek.apps.freelance7rfeen.activities.ChooseRegisterActivity">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="20dp"
        card_view:cardCornerRadius="20dp"
        android:id="@+id/register_freelancer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_14">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/am_worker"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="انا حرفي"
                android:textSize="@dimen/txt_20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginRight="@dimen/margin10"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="20dp"
        card_view:cardCornerRadius="20dp"
        android:id="@+id/register_user">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_14">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/am_user"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="انا مستخدم"
                android:textSize="@dimen/txt_20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
